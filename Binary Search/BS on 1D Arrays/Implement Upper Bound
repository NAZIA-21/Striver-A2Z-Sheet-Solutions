class Solution {
    
    public int[] getFloorAndCeil(int x, int[] arr) {
        int floor = -1;  
        int ceil = -1;   

        for (int num : arr) { 
            if (num <= x) {
                floor = Math.max(floor, num);
            }
            if (num >= x) {
                ceil = (ceil == -1) ? num : Math.min(ceil, num);
            }
        }

        return new int[] {floor, ceil};
    }
}
